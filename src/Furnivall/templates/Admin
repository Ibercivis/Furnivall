    <script>
        function do_administration_profile(researcher){
            $.post('/admin/update_profile/' + researcher, {'name': $('#' + researcher + 'name').val() }, function(response){$('.messages').html(response)});
        }

        function do_create_tasks(job, workunit, number_){
            console.debug(number_);
            $.post('/new/task', {
                'number' : number_,
                'job' : job,
                'workunit' : workunit,
                '_xsrf': '{{xsrf}}'
            });
        }

        function do_administration_newview(researcher){
                console.debug($('#' + researcher + '_views :selected').val());
                 $.post('/new/view', {
                    'viewfile': $('#' + researcher + '_views :selected').val(),
                    '_xsrf': '{{xsrf}}'
                 }, function(response){$('.messages').html(response)});
        }
</script>
{%end%}
